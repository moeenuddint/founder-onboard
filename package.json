{
  "name": "investor-onboarding-dashboard",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=apps/api\" \"npm run dev --workspace=apps/front\"",
    "build": "npm run build --workspace=apps/api && npm run build --workspace=apps/front",
    "start": "concurrently \"npm run start --workspace=apps/api\" \"npm run start --workspace=apps/front\"",
    "test": "npm run test --workspace=apps/api",
    "db:migrate": "npm run db:migrate --workspace=apps/api",
    "db:seed": "npm run db:seed --workspace=apps/api"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
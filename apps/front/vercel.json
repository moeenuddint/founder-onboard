{
  "version": 2,
  "builds": [
    {
      "src": "apps/front/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "installCommand": "cd apps/front && npm install",
  "buildCommand": "cd apps/front && npm run build",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "apps/front/$1"
    }
  ]
}
